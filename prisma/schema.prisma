generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Experiment {
  id        String   @id @default(cuid())
  prompt    String
  createdAt DateTime @default(now())
  results   Result[]
}

model Result {
  id           String     @id @default(cuid())
  experimentId String
  experiment   Experiment @relation(fields: [experimentId], references: [id])
  modelName    String
  response     String
  responseTime Float
  accuracy     Float?
  relevancy    Float?
  createdAt    DateTime   @default(now())
  tokenCount       Int?
  promptTokens     Int?
  completionTokens Int?
  cost             Float?
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}